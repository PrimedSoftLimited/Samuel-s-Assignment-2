<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Sign up"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="who you are?"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/parentButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/text2"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_button"
        android:src="@drawable/parent" />

    <ImageButton
        android:id="@+id/childButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/text2"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/parentButton"
        android:background="@drawable/round_button"
        android:src="@drawable/child"/>

    <ImageButton
        android:id="@+id/teacherButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/text2"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/childButton"
        android:background="@drawable/round_button"
        android:paddingLeft="100dp"
        android:paddingTop="90dp"
        tools:srcCompat="@drawable/teacher" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/parentButton"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edges"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edges"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/editText2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edges"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:layout_below="@id/editText3"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edges"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textColor="#000000"
        android:layout_below="@id/editText4"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/rounded_edges2"
        />



</RelativeLayout>